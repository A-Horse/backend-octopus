upstream octopus_backend_upstream {
    server 127.0.0.1:5500;
    keepalive 64;
}

upstream octopus_backend_todo_statictis_upstream {
    server 127.0.0.1:5501;
    keepalive 64;
}

upstream octopus_backend_todo_upstream {
    server 127.0.0.1:5502;
    keepalive 64;
}

server {
    listen       80        default_server;
    server_name  www.octopuese.xyz octopuese.xyz;
    root /var/www/web-octopus/dist;
    index index.html index.htm;

    location / {
        try_files $uri $uri/ /index.html =404;
    }

    location /api {
        proxy_redirect off;
        proxy_set_header   X-Real-IP            $remote_addr;
        proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
        proxy_set_header   Host                   $http_host;
        proxy_set_header   X-NginX-Proxy    true;
        proxy_set_header   Connection "";
        proxy_http_version 1.1;
        proxy_cache one;
        proxy_cache_key sfs$request_uri$scheme;
        proxy_pass         http://octopus_backend_upstream/api;
    }

    location /api/ts/ {
        proxy_redirect off;
        proxy_set_header   X-Real-IP            $remote_addr;
        proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
        proxy_set_header   Host                   $http_host;
        proxy_set_header   X-NginX-Proxy    true;
        proxy_set_header   Connection "";
        proxy_http_version 1.1;
        proxy_cache one;
        proxy_cache_key sfs$request_uri$scheme;
        proxy_pass         http://octopus_backend_todo_statictis_upstream/api/ts/;
    }

    location /api/t/ {
        proxy_redirect off;
        proxy_set_header   X-Real-IP            $remote_addr;
        proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
        proxy_set_header   Host                   $http_host;
        proxy_set_header   X-NginX-Proxy    true;
        proxy_set_header   Connection "";
        proxy_http_version 1.1;
        proxy_cache one;
        proxy_cache_key sfs$request_uri$scheme;
        proxy_pass         http://octopus_backend_todo_upstream/api/t/;
    }

    location /storage {
        proxy_redirect off;
        proxy_set_header   X-Real-IP            $remote_addr;
        proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
        proxy_set_header   X-Forwarded-Proto $scheme;
        proxy_set_header   Host                   $http_host;
        proxy_set_header   X-NginX-Proxy    true;
        proxy_set_header   Connection "";
        proxy_http_version 1.1;
        proxy_cache one;
        proxy_cache_key sfs$request_uri$scheme;
        proxy_pass         http://octopus_backend_upstream/storage;
    }
}
